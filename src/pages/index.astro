---
import Minds from '@/components/react/minds'
import Layout from '@/layouts/Layout.astro'

const currentUrl = Astro.url;
const title = "Practise Patriarchal Zen";
---

<Layout canonicalUrl={currentUrl}>
  <section class="flex flex-col gap-y-12 px-4 py-8 sm:px-8 lg:px-16">
    <section class="relative" aria-labelledby="minds-title">
      <div>
        <Minds client:load />
      </div>
    </section>
  </section>
</Layout>
