---
import { Icon } from 'astro-icon/components'

interface listItem {
  id: number;
  title: string;
  date: string;
  content: string;
}

const { list } = Astro.props;
---

<div class="timeline">
  {
    list?.map((item: listItem) => <div class="timeline-item">
      <div class="timeline-header">
        <div class="timeline-title">{item.title}</div>
        <div class="timeline-date">
          {item.date || item.id}
        </div>
      </div>
      <div class="timeline-content">{item.content}</div>
    </div>)
  }
</div>

<style>
  html {
    background-color: rgb(18, 21, 33);
  }

  .timeline {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  .timeline-item {
    position: relative;
    padding: 20px;
    margin: 12px;
    border-left: 2px solid #a7feff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background: linear-gradient(150deg, rgba(135, 135, 135, 0.104) 40%, rgba(187, 185, 255, 0.2) 110%);
    border-radius: 16px;
    backdrop-filter: blur(5px);
    border-left: 2px solid rgba(183, 187, 195, 0.35);
    display: inline-block;
    box-sizing: border-box;
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: -9px;
    top: 24px;
    width: 16px;
    height: 16px;
    background: #dcdce1;
    border-radius: 50%;
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
  }

  .timeline-date {
    color: #6b7280;
    font-size: 0.875rem;
    margin-left: 1rem;
  }

  .timeline-title {
    color: #fff;
    font-size: 1.125rem;
    font-weight: 600;
  }

  .timeline-content {
    color: #d1dae6;
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  .timeline-item:hover::before {
    box-shadow: 0 0px 15px rgba(223, 221, 255, 0.957);
  }

  .timeline-title:hover, .timeline-date:hover, .timeline-content:hover {
    text-shadow: 0 0px 15px rgba(223, 221, 255, 0.957);
  }

  @media (max-width: 640px) {
    .timeline-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .timeline-date {
      margin-top: 4px;
      font-size: 0.813rem;
    }

    .timeline-item {
      margin-left: 20px;
    }
  }
</style>
