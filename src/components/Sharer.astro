---
import Link from '@/components/Link.astro'
import { Button } from '@/components/ui/button'
import { Icon } from 'astro-icon/components'
import LikePost from '@/components/LikePost.astro'

const { path, post } = Astro.props
---

<div>
  <div class="flex flex-wrap gap-2">
    <Link
      href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.site + path + post.id)}`}
      target="_blank"
      rel="noopener noreferrer"
      title="Share on Facebook"
      aria-label="Share on Facebook"
    >
      <Button variant="outline" size="icon">
        <Icon name="line-md:facebook" class="size-4" />
      </Button>
    </Link>
    <Link
      href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.site + path + post.id)}`}
      target="_blank"
      rel="noopener noreferrer"
      title="Share on Twitter"
      aria-label="Share on Twitter"
    >
      <Button variant="outline" size="icon">
        <Icon name="line-md:twitter" class="size-4" />
      </Button>
    </Link>
    <Link
      href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.site + path + post.id)}`}
      target="_blank"
      rel="noopener noreferrer"
      title="Share on LinkedIn"
      aria-label="Share on LinkedIn"
    >
      <Button variant="outline" size="icon">
        <Icon name="line-md:linkedin" class="size-4" />
      </Button>
    </Link>
    <Link
      href={`https://www.reddit.com/submit?url=${encodeURIComponent(Astro.site + path + post.id)}`}
      target="_blank"
      rel="noopener noreferrer"
      title="Share on Reddit"
      aria-label="Share on Reddit"
    >
      <Button variant="outline" size="icon">
        <Icon name="line-md:reddit-loop" class="size-4" />
      </Button>
    </Link>
    <Link
      href={`https://wa.me/?text=${encodeURIComponent(Astro.site + path + post.id)}`}
      target="_blank"
      rel="noopener noreferrer"
      title="Share on WhatsApp"
      aria-label="Share on WhatsApp"
    >
      <Button variant="outline" size="icon">
        <Icon name="mdi:whatsapp" class="size-4" />
      </Button>
    </Link>
    <Link
      href={`https://t.me/share/url?url=${encodeURIComponent(Astro.site + path + post.id)}`}
      target="_blank"
      rel="noopener noreferrer"
      title="Share on Telegram"
      aria-label="Share on Telegram"
    >
      <Button variant="outline" size="icon">
        <Icon name="line-md:telegram" class="size-4" />
      </Button>
    </Link>
    <Link
      href={`https://pinterest.com/pin/create/button/?url=${encodeURIComponent(Astro.site + path + post.id)}`}
      target="_blank"
      rel="noopener noreferrer"
      title="Share on Pinterest"
      aria-label="Share on Pinterest"
    >
      <Button variant="outline" size="icon">
        <Icon name="mdi:pinterest" class="size-4" />
      </Button>
    </Link>
  </div>

  <hr class="my-8 hidden md:block" />

  <div class="mb-2 mt-4">
    <h2
      id="reviewed-post-title"
      class="font-custom text-2xl font-bold text-neutral-900 dark:text-white"
    >
      Enjoyed this?
    </h2>
<!--    <div class="text-sm text-neutral-500 dark:text-neutral-400 flex items-center flex-wrap">
      Give it a star&nbsp;
      <Icon name="line-md:star" class="size-4 text-yellow-500" />&nbsp;on&nbsp;
      <Link href="https://github.com/cojocaru-david/portfolio" target="_blank" rel="noopener noreferrer" class="text-primary underline flex items-center flex-warp gap-2">
        GitHub
        <Icon name="line-md:github" class="size-4" />
      </Link>
    </div>-->
    <div class="mt-4 flex items-center gap-2 justify-center">
      <LikePost post={post} />
    </div>
  </div>
</div>

